<UserControl x:Class="FileRacks.UI.View.SidePanelTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileRacks.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <!--<Rectangle Fill="LightGray" Width="40" Height="80" Margin="0,0,-20,0" RadiusX="12" RadiusY="12" />-->
        <Image Width="40" Height="80" Margin="0,0,-15,0">
            <Image.Source>
                <DrawingImage>
                    <DrawingImage.Drawing>
                        <GeometryDrawing Geometry="M 150,0 L 130, 15 L 130, 80 L 150, 95 L 150,0">
                            <GeometryDrawing.Pen>
                                <Pen Brush="LightGray" Thickness="30"
                                 LineJoin="Round" MiterLimit="10" EndLineCap="Round" />
                            </GeometryDrawing.Pen>
                        </GeometryDrawing>
                    </DrawingImage.Drawing>
                </DrawingImage>
            </Image.Source>
        </Image>
    </Grid>
</UserControl>
